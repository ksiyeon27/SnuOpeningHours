<!DOCTYPE html>
<head>
  <%- include ('./head') %>
  <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
  <script src="/public/js/report.js" type="text/javascript"></script>
</head>
<body>

<div>
    <a href="/"><h1>몇 시까지 하샤</h1></a>
    <div class="col-md-12 mb-4">
      <button type="button" class="btn mb-2 mb-md-0 btn-fb">
        <a href="/"> <i class="ion-md-home"></i></a>
      </button>
    </div>

    <h1>search</h1>
    <div class="s006">
      <form>
        <fieldset>
          <legend>영업시간을 찾으시는 장소가 어딘가요?</legend>
          <div class="inner-form">
            <div class="input-field">
              <form action="/place/search" method="GET">
                <input name="keyword" id="search" type="text" placeholder="검색어를 입력하세요" value=""></input>
                <input class="btn-search" type="submit"></input>
              </form>
            </div>
          </div>
          <div class="suggestion-wrap">
            <span>감골식당</span>
            <span>투썸</span>
            <span>우체국</span>
          </div>
        </fieldset>
      </form>

    </div>
</div>
<% if (data.placesCount > 0) { %>
    <div><%= data.placesCount %> 개의 검색 결과가 있습니다. </div>
<% }else{ %>
        <div>검색 결과 없음</div>
<% } %> 
<% if (data) { %> <% for(var i = 0; i < data.placesCount ; i++){ %>
  <div class="one-place-detail">
    <button type="button" class="btn mb-2 mb-md-0 btn-fb"><a class=" text-white" href="/place/<%= data.places[i]._id %>">상세보기</a></button>
  <div>장소: <%= data.places[i].name %></div>
  <div>위치: <%= data.places[i].location %></div>
  <% if (data.places[i].isClosed) { %>
  <div>현재 휴무 중</div>
  <% } %>
  <div>휴무일:</div>
  <% if (data.places[i].dayOff.includes(0)) { %>
  <div>월요일</div>
  <% } %> <% if (data.places[i].dayOff.includes(1)) { %>
  <div>화요일</div>
  <% } %> <% if (data.places[i].dayOff.includes(2)) { %>
  <div>수요일</div>
  <% } %> <% if (data.places[i].dayOff.includes(3)) { %>
  <div>목요일</div>
  <% } %> <% if (data.places[i].dayOff.includes(4)) { %>
  <div>금요일</div>
  <% } %> <% if (data.places[i].dayOff.includes(5)) { %>
  <div>토요일</div>
  <% } %> <% if (data.places[i].dayOff.includes(6)) { %>
  <div>일요일</div>
  <% } %> <% if (data.places[i].dayOff.includes(7)) { %>
  <div>휴일</div>
  <% } %>

  <div><%= data.places[i].dayOff %></div>

  <div>운영시간</div>
  <% for(var j = 0; j < data.places[i].openTime.length ; j++){ %>
  <div><%= data.places[i].openTime[j] %> ~ <%= data.places[i].closeTime[j] %></div>
  <% } %> </div><% } %> 
  <% }else{ %>
  <div>aa</div>
  <% } %>


</body>